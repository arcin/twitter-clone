 <div class="container">
  <h3> Welcome to the Public Profile of <%= @user.username%></h3>
  <form action="/follow/<%= @user.username %>" method="post">
    <button type="submit" class="btn btn-primary">Follow</button>
  </form>
  <a href="/"><button type="submit" class="btn btn-default">Home</button></a>
  <div class="feed">
    <% @user.tweets.each do |t| %>
      <div class="tweet">
        <div class="tweet-body"><%= t.text %></div>
      </div>
    <% end %>
  </div>


 </div>